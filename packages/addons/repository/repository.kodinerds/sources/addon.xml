    <requires>
        <import addon="xbmc.addon" version="12.0.0"/>
    </requires>
    <extension point="xbmc.addon.repository" name="L0RE">
		<info compressed="true">https://raw.githubusercontent.com/kodinerds/repo/master/addons.xml</info>
