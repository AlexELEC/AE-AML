. /etc/profile
oe_setup_addon service.system.syncthing

chmod +x $ADDON_DIR/bin/*

STNODEFAULTFOLDER="y" syncthing -home=$ADDON_HOME           \
                                -gui-address="$gui_address" \
                                -logflags=0                 \
                                -no-browser                 \
                                -no-restart                 \
                                &

