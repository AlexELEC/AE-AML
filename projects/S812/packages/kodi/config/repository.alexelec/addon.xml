<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="@ADDON_REPO_ID@"
		name="@ADDON_REPO_NAME@"
		version="@ADDON_REPO_VERSION@"
		provider-name="AlexELEC">
	<extension point="xbmc.addon.repository"
		name="@ADDON_REPO_NAME@">
		<info>@ADDON_URL@/addons.xml.gz</info>
		<checksum>@ADDON_URL@/addons.xml.gz.sha256</checksum>
		<datadir zip="true">@ADDON_URL@</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>@ADDON_REPO_NAME@</summary>
		<description>
The AlexELEC add-on repository contains Kodi PVR Clients and Servers, Screensavers, Visualisations, and more.
		</description>
		<platform>all</platform>
	</extension>
</addon>
